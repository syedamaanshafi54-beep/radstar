{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "commonjs",                   
    "moduleResolution": "node",             
    "lib": ["ES2020"],                      
    "outDir": "lib",                        
    "rootDir": "src",                       
    "strict": true,                        
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                   
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,              
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]                       
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
